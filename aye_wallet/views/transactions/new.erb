<h1>Add a new transaction:</h1>

<div>
  <form action="/transactions" method="post">
    <label>
      Item:
      <br>
      <input class="btn"  type="text" name="item"/>
    </label>
    <br>
    <label>
      Value:
      <br>
      <input class="btn"  type="text" name="value"/>
    </label>
    <br>
    <label>
      Merchant:
      <br>
      <input class="btn" type="text" name="merchant"/>
    </label>
    <br>
    <label>
      Category:
      <br>
      <% @tags.sort! { |tag1, tag2| tag1.id <=> tag2.id } %>
      <select name="tag_id">
        <% for tag in @tags %>
            <option value = <%= tag.id %> > <%= tag.category %> </option>
        <% end %>
      </select>
    </label>
    <br>
    <br>
    <input class="btn" type="submit" value="Add transaction">
  </form>
</div>